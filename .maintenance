<?php 
/* 
    Rename this file for desactivate maintenance mode.
*/
$upgrading = time(); 
if(!function_exists("wp_maintenance_mode"))
{
    // Activate WordPress Maintenance Mode
    function wp_maintenance_mode()
    {
        global $wp;
        if(!is_user_logged_in() && !is_admin() && home_url( $wp->request ) != wp_login_url()) {
            if ( file_exists( WP_CONTENT_DIR . '/maintenance.php' ) ) {
                require_once WP_CONTENT_DIR . '/maintenance.php';
                die();
            }
            die("<h1>Le site est actuellement en maintenance.</h1>");
        }
    }
    function custom_maintenance()
    {
        return false;
    }
    add_filter('enable_maintenance_mode', 'custom_maintenance');
    add_action('get_header', 'wp_maintenance_mode');
}

?>